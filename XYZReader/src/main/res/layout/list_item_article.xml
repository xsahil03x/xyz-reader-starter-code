<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/small_space"
    android:layout_marginTop="@dimen/small_space"
    android:layout_marginRight="@dimen/small_space"
    android:layout_marginBottom="@dimen/small_space"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/empty_detail"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@integer/article_line_count"
            android:paddingStart="@dimen/large_space"
            android:paddingTop="@dimen/large_space"
            android:paddingEnd="@dimen/large_space"
            android:paddingBottom="@dimen/small_space"
            tools:text="ARTICLE TITLE" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@integer/subtitle_line_count"
            android:paddingStart="@dimen/large_space"
            android:paddingEnd="@dimen/large_space"
            android:paddingBottom="@dimen/large_space"
            android:textColor="@color/colorPrimary"
            tools:text="Article Subtitle" />
    </LinearLayout>

</android.support.v7.widget.CardView>